<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
        name="my-project-type"
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="groupId">
          <defaultValue>tutorial</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
          <defaultValue>my-server-extension</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
          <defaultValue>1.0.0-SNAPSOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
          <defaultValue>tutorial</defaultValue>
        </requiredProperty>
        <requiredProperty key="yourPrefix">
          <defaultValue>My</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/che/machines</directory>
            <includes>
                <include>**/Dockerfile</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory>src/main/che/templates</directory>
            <includes>
                <include>**/*.json</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
